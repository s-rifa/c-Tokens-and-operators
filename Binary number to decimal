#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int long x = 1010;
    cout<<"Binary number = "<<x;
    int y,z,i;
    i=z=0;
    while(x!=0){
        y=x%10;
        z+=y*(pow(2,i));
        x=int(x/10);
        i+=1;
    }
    cout<<"\nDecimal number = "<<z;
    return 0;
}
